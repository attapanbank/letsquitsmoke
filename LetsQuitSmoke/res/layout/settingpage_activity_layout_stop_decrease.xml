<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/rectangle2" >

    <RelativeLayout
        android:id="@+id/stopform"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="visible" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_action_time" />


        <EditText
            android:id="@+id/inputdate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:maxLines="1"
            android:hint="วันที่หยุดสูบ"
            android:focusable="false"
            android:inputType="date" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/decreaseform"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="invisible" >

        <TextView 
            android:id="@+id/decreasetext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:text="สูบปกติ มวน/วัน"
            android:textSize="14sp" />
        
        <TextView 
            android:id="@+id/decreasetext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="ลดให้เหลือ มวน/วัน"
            android:textSize="14sp" />
        
        <EditText
            android:id="@+id/inputnormal"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:maxLines="1"
            android:text="2" />
        
        <EditText
            android:id="@+id/inputdecrease"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:maxLines="1"
            android:text="1" />
        
    </RelativeLayout>

   

</RelativeLayout>